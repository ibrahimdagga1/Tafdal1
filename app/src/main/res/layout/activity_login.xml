<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="271dp"
        android:background="@color/grean"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="89dp"
            android:layout_height="119dp"
            android:layout_gravity="center"
            android:layout_marginRight="142dp"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="69dp"
            app:srcCompat="@drawable/group_495" />

        <TextView
            android:id="@+id/login_tv_login"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_marginHorizontal="100dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="124dp"
            android:layout_marginTop="25sp"
            android:text="تسجيل الدخول"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <EditText
        android:id="@+id/login_et_email"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:textColor="@color/black"
        android:background="@drawable/shape_et_search"
        android:textSize="16dp"
        android:drawablePadding="18dp"
        android:textColorHint="#939393"
        android:textStyle="normal"
        android:drawableRight="@drawable/icon_email"
        android:inputType="textPersonName"
        android:paddingStart="18dp"
        android:layout_marginHorizontal="19dp"
        android:paddingHorizontal="18dp"
        android:hint="الايميل"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:paddingLeft="18dp" />

    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:textColor="@color/black"
        android:background="@drawable/shape_et_search"
        android:drawablePadding="18dp"
        android:textColorHint="#939393"
        android:textSize="16dp"

        android:inputType="textPersonName"
        android:layout_marginHorizontal="19dp"
        android:drawableRight="@drawable/icon_password"
        android:hint="كلمة السر"
        android:paddingStart="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_et_email"
        android:paddingLeft="18dp" />

    <TextView
        android:id="@+id/login_tv_forgetPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:text="نسيت كلمة السر ؟"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_et_password" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="تسجيل الدخول"
        android:background="@drawable/shape_button"
        android:textStyle="bold"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_forgetPassword" />

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="22dp"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="لا أمتلك حساب ؟" />

        <TextView
            android:id="@+id/login_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="التسجيل الأن" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>