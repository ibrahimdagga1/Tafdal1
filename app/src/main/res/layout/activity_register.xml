<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:background="@color/grean"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:viewBindingIgnore="true" >

        <ImageView
            android:id="@+id/register_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="142dp"
            app:srcCompat="@drawable/group_495" />

        <TextView
            android:id="@+id/register_tv_login"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="100dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="25sp"
            android:layout_marginRight="124dp"
            android:gravity="center_horizontal"
            android:text="تسجيل الاشتراك"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>


    <EditText
        android:id="@+id/register_et_name"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:drawableRight="@drawable/icon_name"
        android:drawablePadding="10dp"
        android:ems="10"
        android:background="@drawable/shape_et_search"
        android:hint="اسم المستخدم"
        android:inputType="textPersonName"
        android:paddingHorizontal="18dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp"
        android:textColorHint="#939393"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/register_et_mobile"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/shape_et_search"
        android:drawableRight="@drawable/icon_mobile"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="رقم الجوال"
        android:inputType="textPersonName"
        android:paddingHorizontal="18dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp"
        android:textColorHint="#939393"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_name" />

    <EditText
        android:id="@+id/register_et_phone"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/shape_et_search"
        android:drawableRight="@drawable/phone_call__"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="رقم الهاتف"
        android:inputType="textPersonName"
        android:paddingHorizontal="18dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp"
        android:textColorHint="#939393"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_mobile" />

    <EditText
        android:id="@+id/register_et_title"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/shape_et_search"
        android:drawableRight="@drawable/icon_map"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="العنوان"
        android:inputType="textPersonName"
        android:paddingHorizontal="18dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp"
        android:textColorHint="#939393"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_phone" />



    <EditText
        android:id="@+id/register_et_email"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:background="@drawable/shape_et_search"
        android:textSize="16dp"
        android:drawablePadding="10dp"
        android:textColorHint="#939393"
        android:textStyle="normal"
        android:drawableRight="@drawable/icon_email"
        android:inputType="textPersonName"
        android:paddingStart="18dp"
        android:layout_marginHorizontal="19dp"
        android:paddingHorizontal="18dp"
        android:hint="الايميل"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_title"

        android:paddingLeft="18dp" />

    <EditText
        android:id="@+id/register_et_password"
        android:layout_width="337dp"
        android:layout_height="45.58dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:background="@drawable/shape_et_search"
        android:drawablePadding="10dp"
        android:textColorHint="#939393"
        android:textSize="16dp"

        android:inputType="textPersonName"
        android:layout_marginHorizontal="19dp"
        android:drawableRight="@drawable/icon_password"
        android:hint="كلمة السر"
        android:paddingStart="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_email"
        android:paddingLeft="18dp" />

    <Button
        android:id="@+id/register_btn_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="27dp"
        android:textSize="20sp"
        android:gravity="center"
        android:backgroundTint="@color/grean"
        android:text="تسجيل الدخول"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_password" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>